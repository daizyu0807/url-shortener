{{#if shortUrl}}
  <div class="row">
    <div class="col-sm-6">
      <div class="card text-center">
        <div class="card-body d-flex flex-column">
          <button class="btn btn-success mb-3" type="button" id="copyUrl">複製</button>
          <input type="text" class="form-control" value="{{oriUrl}}/{{shortUrl}}" aria-label="URL bar" aria-describedby="button-addon2" disabled>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card text-center">
        <div class="card-body d-flex flex-column">
          <button class="btn btn-success" type="button" id="button-addon2">下載</button>
          <img class="align-self-center" src="https://chart.googleapis.com/chart?cht=qr&chl={{oriUrl}}/{{shortUrl}}&chs=300x300" alt="short url">
        </div>
      </div>
    </div>
{{/if}}
{{#if shortUrl}}
  <div class="row">
    <div class="col-sm-6">
      <div class="card text-center">
        <div class="card-body d-flex flex-column">
          <button class="btn btn-success mb-3" id="copyUrl" type="button" onclick="CopyUrl()">複製</button>
          <p type="text" class="form-control" id="urlValue" aria-label="URL bar" >
            {{oriUrl}}/{{shortUrl}}
          </p>
        </div>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="card text-center">
        <div class="card-body d-flex flex-column" id="qrcode">
          <a id="downloadLink"></a>
          <button class="btn btn-success" type="button" id="button-addon2" onclick="downloadClick()">下載</button>
          <img crossorigin="anonymous" class="align-self-center" src="https://chart.googleapis.com/chart?cht=qr&chl={{oriUrl}}/{{shortUrl}}&chs=300x300" alt="short url">
        </div>
      </div>
    </div>
{{/if}}


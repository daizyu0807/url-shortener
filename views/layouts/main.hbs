<body class="bg-dark">
  <div class="container mt-3 p-3">
    <nav class="navbar navbar-light bg-secondary rounded mb-3">
      <div class="container-fluid">
        <a class="navbar-brand text-light" href="/">URL-shortener</a>
      </div>
    </nav>
    <main class="bg-secondary rounded mb-3 p-3">
      <form action="/" method="post">
        <div class="input-group mb-3">
          <input type="url" name="url" class="form-control" placeholder="請在這裡輸入網址" aria-label="URL bar" aria-describedby="button-addon2" value="{{oriUrl}}">
          <button class="btn btn-primary" type="submit" id="button-addon2">縮址</button>
        </div>
      </form>
      {{{body}}}
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
